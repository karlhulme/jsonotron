  "bugs": {
    "url": "https://github.com/karlhulme/jsonotron/issues"
  },
  "homepage": "https://github.com/karlhulme/jsonotron#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "typescript": "^4.0.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "**/*.test.ts"
