/**
 * Represents an enumeration.
 */
export interface EnumType<ItemType> {
  /**
   * The name of the enum.
   */
  name: string

  /**
   * The qualified name of the enum, presented in pascal case.
   */
  qualifiedPascalName: string

  /**
   * An array of tags.
   */
  tags: string[]

  /**
   * An array of items.
   */
  items: ItemType[]
}

/**
 * Represents an item in an enumeration.
 */
export interface EnumTypeItem {
  /**
   * The underlying value of the item.
   */
  value: string

  /**
   * The display text of the value in English.
   */
  text: string

  /**
   * The value converted to const case.
   */
  constant: string

  /**
   * A symbol associated with the item.
   */
  symbol?: string

  /**
   * Provides information about the deprecation of this enum item.
   */
  deprecated?: string
}

/**
 * Represents an enum type that provides additional data
 * for each enum type item that conforms to type T.
 */
export interface ExtendedEnumTypeItem<T> extends EnumTypeItem {
  /**
   * The data associated with a single enum item of type T.
   */
  data: T
}
